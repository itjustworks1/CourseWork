<Window x:Class="Разработка_магазина_для_продажи_стройматериалов.View.WindowRemoveFromCart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Разработка_магазина_для_продажи_стройматериалов.View"
        mc:Ignorable="d"
        Title="Удалить из корзины" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" Text="Удалить из корзины" Grid.ColumnSpan="2" FontSize="36"/>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" TextAlignment="Center" FontSize="20"/>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Удалить" Command="{Binding Remove}" Grid.Row="2" Grid.Column="2" FontSize="20"/>
    </Grid>
</Window>